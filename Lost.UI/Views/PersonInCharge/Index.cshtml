@using PagedList.Mvc
@model PagedList.IPagedList<Lost.DAL.Models.PersonInChargeEntity>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@using (Html.BeginForm())
{
    <p>
        <span class="searchBox">@Html.TextBox("SearchString", null, new { @class = "form-control", placeholder = "Search by name or surname" })</span>
        <input type="submit" value="Search" class="btn btn-default" />
    </p>
}

<table class="table">
    <tr>
        <th>
            Ime
        </th>
        <th>
            Prezime
        </th>
        <th>
            OIB
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OIB)
            </td>
        </tr>
    }
</table>